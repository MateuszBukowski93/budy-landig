---
import Layout from '../layouts/Layout.astro';
import Lightbox from '@julian_cataldo/astro-lightbox/Lightbox.astro';
import { Image } from 'astro:assets';

// Get all images from assets/images/huts directory
const images = await Astro.glob('../../src/assets/images/huts/*')
---
<Layout title="Galeria">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-heading-1 mb-8">Galeria</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {images.map((image) => {
        console.log({image})
        if(image){
        return(
          <Image
            src={image.default}
            alt="ZdjÄ™cie budy dla psa"
            format="avif"
            quality={50}
            class="rounded-sm mb-4 border border-transparent hover:border-gray-300 transition-all duration-300 ease-in-out hover:shadow-lg"
            loading="lazy"
          />

      )}})}
    </div>
  </main>
</Layout>
