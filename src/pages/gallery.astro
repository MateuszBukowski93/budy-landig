---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Get all images from assets/images/huts directory
const images = await Astro.glob('../../src/assets/images/huts/*')
---
<Layout title="Galeria">
  <main class="container mx-auto px-4 py-8 mt-6">
    <div
    class="mx-auto container my-8 sm:columns-1 md:columns-2 lg:columns-3"
  >
      {images.map((image) => {
        if(image){
        return(
          <Image
            src={image.default}
            alt="ZdjÄ™cie budy dla psa"
            quality={50}
class="rounded-sm mb-4 border border-transparent hover:border-gray-300 transition-all duration-300 ease-in-out hover:shadow-lg"
            loading="lazy"
          />

      )}})}
    </div>
  </main>
</Layout>
