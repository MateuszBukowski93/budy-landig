---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Twój pies zasługuje na to, co najlepsze – nasze budy to komfort i jakość",
  },
  {
    title: "Stworzone z miłości do psów – budy, które pokochają Twoje czworonogi",
  },
  {
    title: "Naturalne, ekologiczne i trwałe – budy, które przetrwają lata",
  },
  {
    title: "Każda buda to ręczna robota – unikatowa jak Twój pies",
  },
  {
    title: "Komfort przez cały rok – izolacja chroni przed zimnem i upałem",
  },
  {
    title: "Solidne materiały, które wytrzymają każdy psi wybryk",
  },
  {
    title: "Estetyka i funkcjonalność – budy, które pasują do Twojego ogrodu",
  },
  {
    title: "Wybierz rozmiar idealny dla Twojego pupila – od małego kundelka po bernardyna",
  },
  {
    title: "Indywidualne podejście – dostosujemy budę do Twoich potrzeb",
  },
  {
    title: "Wspierasz lokalną produkcję – budy tworzone z pasją w naszym warsztacie",
  },
  {
    title: "Bezpieczne dla psa – żadnych toksycznych materiałów",
  },
  {
    title: "Odporne na deszcz, śnieg i słońce – gotowe na każdą pogodę",
  },
  {
    title: "Zaprojektowane z myślą o komforcie – więcej niż schronienie",
  },
  {
    title: "Nasze budy to nie wydatek – to inwestycja w zdrowie Twojego psa",
  },
  {
    title: "Twój pies poczuje się w naszej budzie jak w domu",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Dostarczamy <GradiantText>produkty <br />wysokiej jakości</GradiantText> Do Twojego domu      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
