---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import TestimonialsCarousel from "../blocks/TestimonialsCarousel.astro";
import GradiantText from "../shared/GradiantText.astro";


export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class=`${className}` id="testimonials">
  <Container className="">
    <div class="text-center">
      <Title>Dołącz do naszych <GradiantText>zadowolonych klientów</GradiantText></Title>
    </div>
  </Container>
  <div class="w-screen overflow-x-hidden">
    <TestimonialsCarousel />
  </div>
</section>

