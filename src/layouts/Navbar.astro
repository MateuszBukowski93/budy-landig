---
import Container from "../components/shared/Container.astro";
import Navitem from "../components/shared/Navitem.astro";
import BtnLink from "../components/shared/BtnLink.astro";
import Logo from "../assets/logos/hfp.png";
import LogoMobile from "../assets/logos/logo-mobile.png";
import { Image } from 'astro:assets';
const navItems = [
  {
    href: "/gallery",
    text: "Galeria",
  },
  {
    href: "/order",
    text: "Zamówienie",
  },

  

];
---

<header class="absolute inset-x-0 top-0 z-50 py-6">
  <Container>
    <nav class="w-full flex justify-between gap-6 relative">

      <div class="min-w-max inline-flex relative">
        <a href="/" class="relative flex items-center gap-3">
        <Image
          src={Logo}
          alt="Zdjęcie budy dla psa"
          quality={100}
          loading="lazy"
          height={100}
          class="hidden md:block"
        />
        <Image 
          src={LogoMobile}
          alt="Zdjęcie budy dla psa - wersja mobilna"
          quality={100}
          loading="lazy"
          height={80}
          class="block md:hidden"
        />
      </a>
      </div>


      <div
        data-nav-overlay
        aria-hidden="true"
        class="fixed hidden inset-0 lg:!hidden bg-box-bg bg-opacity-50 backdrop-filter backdrop-blur-xl"
      >
      </div>
      <div
        data-navbar
        class="flex h-0 overflow-hidden lg:!h-auto lg:scale-y-100 duration-300 ease-linear flex-col gap-y-6 gap-x-4 lg:flex-row w-full lg:justify-between lg:items-center absolute lg:relative top-full lg:top-0 bg-body lg:bg-transparent border-x border-x-box-border lg:border-x-0"
      >
        <ul
          class="border-t border-box-border lg:border-t-0 px-6 lg:px-0 pt-6 lg:pt-0 flex flex-col lg:flex-row gap-y-4 gap-x-3 text-lg text-heading-2 w-full lg:justify-center lg:items-center"
        >
          <!-- {
            navItems.map((item) => {
              return <Navitem {...item} />;
            })
          } -->
        </ul>

        <div
          class="lg:min-w-max flex items-center sm:w-max w-full pb-6 lg:pb-0 border-b border-box-bg lg:border-0 px-6 lg:px-0 gap-x-4"
        >
        <BtnLink
        text="Galeria"
        href="/order"
        className="flex justify-center w-full sm:w-max p-2"
        variant="primary"
      />
          <!-- <BtnLink
            text="Zamów przez formularz"
            href="/order"
            className="flex justify-center w-full sm:w-max"
            variant="primary"
          />
      -->
        </div>
      </div>

      </div>
    </nav>
  </Container>
</header>
