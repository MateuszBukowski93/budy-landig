            </Paragraph>
          </div>

          <!-- social links -->
          <div class="min-h-max flex items-center gap-4 text-heading-3 mt-8">
          
          </div>
        </div>

        <GroupFooterNav>
          <FooterNav title={"Dane firmy"} navItems={footerCompany} />
          <!-- <FooterNav title={"Solutions"} navItems={footerNav1} /> -->
        </GroupFooterNav>
<!-- 
        <GroupFooterNav>
